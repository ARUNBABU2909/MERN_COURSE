 <html lang="en">
 <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
 </head>
 <body>
    <script>
        // Arithmetic Operators

let a1 = 10;
let b1 = 5;
console.log(a1 + b1);
console.log(a1 - b1);
console.log(a1 * b1);
console.log(a1 / b1);

let x2 = 10, y2 = 20, z2 = 30;
console.log((x2 + y2 + z2) / 3);

let length3 = 8;
let breadth3 = 4;
console.log(length3 * breadth3);

let cel4 = 25;
console.log((cel4 * 9/5) + 32);

let n1_5 = 17;
let n2_5 = 4;
console.log(n1_5 % n2_5);


// Assignment Operators

let num6 = 20;
num6 += 10;
console.log(num6);

let num7 = 6;
num7 *= 5;
console.log(num7);

let pts8 = 12;
pts8 -= 3;
console.log(pts8);

let score9 = 40;
score9 /= 2;
console.log(score9);

let n10 = 10;
n10 += 5;
n10 *= 2;
n10 -= 4;
console.log(n10);


// Comparison Operators

let cA11 = 10;
let cB11 = 20;
console.log(cA11 == cB11);

console.log(cA11 > cB11);

let st1 = "hello";
let st2 = "hello";
console.log(st1 === st2);

let num14 = 85;
console.log(num14 <= 100);

let sx = 5;
let sy = "5";
console.log(sx === sy);


// Logical Operators

let num16 = 25;
console.log(num16 > 10 && num16 < 50);

let num17 = 5;
console.log(num17 < 10 || num17 > 100);

let ready = true;
console.log(!ready);

let age19 = 20;
let hasID19 = false;
console.log((age19 >= 18 && hasID19) || age19 >= 25);

let marks20 = 40;
console.log(marks20 >= 35);


// Increment & Decrement

let c21 = 0;
c21++;
console.log(c21);

let v22 = 5;
v22--;
console.log(v22);

let pA = 5;
console.log(pA++);
console.log(pA);

let pB = 5;
console.log(++pB);

for (let i = 10; i >= 1; i--) {
  console.log(i);
}

let q25 = 10;
let r25 = q25++ - --q25 + ++q25;
console.log(r25);


// Ternary Operators

let num26 = 7;
console.log(num26 % 2 === 0 ? "Even" : "Odd");

let gA = 10, gB = 20;
console.log(gA > gB ? gA : gB);

let age28 = 16;
console.log(age28 >= 18 ? "Eligible" : "Not Eligible");

let num29 = -3;
console.log(num29 > 0 ? "Positive" : num29 < 0 ? "Negative" : "Zero");

let txt30 = "";
console.log(txt30 === "" ? "Empty String" : "Not Empty");


// Bitwise Operators

let ba = 5;
let bb = 3;
console.log(ba & bb);

console.log(ba | bb);

console.log(ba ^ bb);

let bx = 4;
console.log(bx << 1);
console.log(bx >> 1);

let by = 6;
let bz = 2;
console.log((by & bz) || (by > bz));

    </script>
 </body>
 </html>
