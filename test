<body>
  <div class="clock" role="timer" aria-live="polite">
    <span id="time">00 : 00 : 00</span>
    <span class="label">Current time (HH : MM : SS)</span>
  </div>

  <script>
    const el = document.getElementById('time');

    function formatTwo(n){ return String(n).padStart(2,'0'); }

    function render(now){
      const hh = formatTwo(now.getHours());
      const mm = formatTwo(now.getMinutes());
      const ss = formatTwo(now.getSeconds());
      el.textContent = `${hh} : ${mm} : ${ss}`;
    }

    // Sync so the update runs exactly on each second boundary
    function startClock(){
      const now = new Date();
      render(now);
      const msToNextSecond = 1000 - now.getMilliseconds();
      setTimeout(()=>{
        render(new Date());
        setInterval(()=>render(new Date()), 1000);
      }, msToNextSecond);
    }

    startClock();
  </script>
</body>
</html>
